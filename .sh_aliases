#!/bin/bash

# 'Find process'; grep for a procss without showing grep itself
# Ex: `fps redis`
function fps() {
  ps aux | grep -v grep | grep $1
}

# Open a directory in a finder window (defaults to current directory)
# Exit the terminal unless run with -k
# Ex: dir
# Ex: dir -k some/folder/
function dir {
  if [[ -n "$2" ]]
  then
    open "$2"
  else
    open .
  fi

  if [[ "$1" != '-k' ]]
  then
    exit
  fi
}
alias dirk='dir -k'

# 'Find file'. Shows files matching a given pattern
# Ex: ff shared.js
# => app/assets/javascripts/shared.js
# => public/javascripts/shared.js
function ff {
  mdfind -onlyin . $1 | grep $1
}

# Print size of the given directory
# Ex: dirsize app/ => 25M
function dirsize {
  du -skh $1
}

function linecount {
  cat $1 | wc -l
}

# Copy a file to a clipboard
function copy {
  cat $1 | pbcopy
}
alias opy=copy

function murder {
  sudo killall -9 $1
}

alias c='clear'
alias ls='ls -F'
alias ll='c; ls -lah'
alias cls='c; ls'
alias x='exit'
alias xx='exit'
alias ':x'='x'

alias up='cd ../'
alias up.='up'
alias up..='cd ../../'
alias up...='cd ../../../'
alias up....='cd ../../../../'
alias up.....='cd ../../../../../'

# Vim
alias v='vim'
function vims {
  if [[ -n "$1" ]]
  then
    vim -S "$1"
  else
    vim -S s.vim
  fi
}
alias vimr='vim -R'
alias dangling='tree -a . | grep swp'

# Rails
alias be='bundle exec'
function be {
  if test -f "bin/spring"; then
    spring $@
  else
    bundle exec $@
  fi
}
alias rake='be rake'
alias cons='c;be rails console'

# Typo fixes
alias clera='clear'
alias qcs='cs'
alias xit='exit'
alias rpsec='rspec'
alias vi='vim'
alias im='vim'
alias :e='vim'
alias 'jc'='j'
alias 'J'='j'
alias ck='ack'
alias at='cat'

# Git
export GIT_COMPLETION_NO_REMOTE_BRANCHES=1
export GIT_COMPLETION_NO_TAGS=1

# Run git status if in git repo, else ls -la
function cs {
  clear
  if ! git ls-files >& /dev/null
  then
    ls -lah
  else
    git status
  fi
}

function csf {
  git status | fpp
}

# Show diff of last commit
function glc {
   sha=`git rev-parse --short HEAD`
   git show --oneline "$sha"
}

alias amend='git commit --amend'
alias co='git checkout'
alias copycommit='git format-commit | pbcopy'
alias gap='git add --patch'
alias gcb='git clean-branches'
alias gd='git diff'
alias gds='gd --staged'
alias gitm='git commit --verbose'
alias gr='git refresh'
alias grc='git rebase --continue'
alias grm='git rebase master'
alias gsl='git stash list'
alias gsp='git stash pop'
alias master='co master'
alias mm='git merge master'
alias resethead='git reset --soft HEAD^ && git unstage .'
alias s='git status'
alias uns='git unstage'

function forcepush {
  git push -f origin $(git rev-parse --abbrev-ref HEAD) $@
}

# Which branches have been merged?
function report {
  clear
  echo "Merged:"
  git branch --merged
  echo "Not merged:"
  git branch --no-merged
  git status
}
alias r='report'

function grr {
  git stash save
  git refresh
  git stash pop
}

# Show diff for a numbered git stash
# Ex: gssp 3
function gssp {
  git stash show -p stash@{"$1"}
}

# Shortlog of last commits (default 10)
# Ex: glo -5
function glo {
  if [ -z "$1" ]
  then
    git log --oneline -10
  else
    git log --oneline $1
  fi
}

function conflict () {
  ack ">>>"
  ack "<<<"
}
